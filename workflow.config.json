{
  "workflow_description": {
    "name":"raw_fastq_qc",
    "version": 1.0,
    "label":"Raw fastq QC",
    "type":"raw_fastq_qc",
    "inputs":"raw_fastq/{sample}*fastq.gz",
    "outputs":[
      "qc_reports/*"
    ],
    "report_index": "qc_reports/raw_fastq_multiqc.html",
    "reports":[
      "qc_reports/raw_fastq_multiqc.html"
    ]
  },
  "general_params": [
    "entity_name",
    "sample_name"
  ],
  "requested_params": [
    "is_paired"
  ],
  "gui_params" : {
    "detailed": {
      "check_adaptors": {
        "label": "Check adaptors by Minion",
        "type": "bool",
        "default": false
      },
      "min_adapter_matches": {
        "label": "Min length of adaptor match (Minion)",
        "type": "int",
        "default": 12
      },
      "filesender": {
        "label": "Send results to:",
        "type": "string",
        "default": ""
      }
    }
  }
}